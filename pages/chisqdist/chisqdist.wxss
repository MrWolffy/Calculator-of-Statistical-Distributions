.container {
  padding: 30px;
}

.prompt {
  margin-bottom: 50px;
}

.sub-container {
  width: 80%;
  text-align: left;
  margin-bottom: 50px;
}

.title {
  margin-bottom: 10px;
}

.form-container {
  width: 100%;
  float: none;
  background-color: #888
}

.cal-prompt {
  width: 17%;
  float: left;
  height: 30px;
  margin-bottom: 10px;
}

input {
  float: right;
  width: 80%;
  margin-bottom: 10px;
  border: 3px #aaa;
  background-color: #fff;
  padding-left: 5px;
  height: 30px;
}

.result-prompt {
  width: 19%;
  float: left;
}

.result {
  width: 80%;
  float: left;
}

.submit {
  margin-top: 10px;
  margin-bottom: 10px;
  float: none;
  width: 100%;
}